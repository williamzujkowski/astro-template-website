---
// src/components/Hero.astro
interface Props {
  headline: string;
  subheadline?: string; // Optional subheadline
  ctaText: string;
  ctaHref: string;
}

const { headline, subheadline, ctaText, ctaHref } = Astro.props;
---
<section class="hero-section">
  <div class="hero-content">
    <h1>{headline}</h1>
    {subheadline && <p class="subheadline">{subheadline}</p>}
    <a href={ctaHref} class="cta-button">{ctaText}</a>
  </div>
</section>

<style>
/* Basic styling for demonstration */
.hero-section {
  padding: 4rem 1rem;
  text-align: center;
  background-color: #f0f4f8; /* Light background */
}

.hero-content h1 {
  font-size: 2.5rem;
  margin-bottom: 0.5rem;
}

.subheadline {
  font-size: 1.2rem;
  margin-bottom: 1.5rem;
  color: #555;
}

.cta-button {
  display: inline-block;
  padding: 0.8rem 1.5rem;
  background-color: #007bff; /* Example blue */
  color: white;
  text-decoration: none;
  border-radius: 4px;
  font-weight: bold;
  transition: background-color 0.2s ease;
}

.cta-button:hover {
  background-color: #0056b3; /* Darker blue on hover */
}
</style>
