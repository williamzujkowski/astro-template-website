---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import CTASection from '../components/CTASection.astro'; // Import CTASection

// Sample Features Data
const featuresData = [
  {
    title: "Fast by Default",
    description: "Astro renders your UI to HTML at build time. No JavaScript runtime.",
    icon: "🚀" // Example using emoji as icon
  },
  {
    title: "Component Islands",
    description: "Need interactive UI? Load individual components on demand.",
    icon: "🏝️"
  },
  {
    title: "Framework Agnostic",
    description: "Use your favorite UI components from React, Preact, Svelte, Vue, Solid, Lit and more.",
    icon: "⚙️"
  }
];
---

<Layout title="Welcome to My Astro Site">
	<Hero
		headline="Build Faster Websites"
		subheadline="Leverage the power of Astro for unparalleled performance and developer experience."
		ctaText="Get Started"
		ctaHref="/docs"
	/>
	<Features features={featuresData} />
	<CTASection
		headline="Ready to Get Started?"
		ctaText="Explore the Docs"
		ctaHref="/docs"
	/>
	{/* Other page content will go here */}
</Layout>
