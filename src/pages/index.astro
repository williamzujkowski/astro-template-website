---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import CTASection from '../components/CTASection.astro'; // Import CTASection
import { featuresData } from '../data/featuresData'; // Import featuresData

// featuresData is now imported from src/data/featuresData.ts
---

<Layout title="Welcome to My Astro Site">
	<Hero
		headline="Build Faster Websites"
		subheadline="Leverage the power of Astro for unparalleled performance and developer experience."
		ctaText="Get Started"
		ctaHref="/docs"
	/>
	<Features features={featuresData} />
	<CTASection
		headline="Ready to Get Started?"
		ctaText="Explore the Docs"
		ctaHref="/docs"
	/>
	{/* Other page content will go here */}
</Layout>
