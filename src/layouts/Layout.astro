---
// src/layouts/Layout.astro
interface Props {
	title: string;
}

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'; // Import Footer

const { title } = Astro.props;
const siteTitle = "My Astro Site"; // Define the site title

// Define navigation items
const navItems = [
  { text: 'Home', href: '/' },
  { text: 'About', href: '/about' }, // Example link
  { text: 'Blog', href: '/blog' },   // Example link
];
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header siteTitle={siteTitle} navItems={navItems} />
		<main>
			<slot />
		</main>
		<Footer startYear={2023} /> {/* Pass startYear */}
	</body>
</html>
